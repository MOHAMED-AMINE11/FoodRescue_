<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/orange"
      app:elevation="8dp"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/orange_500"
      android:elevation="4dp"
      app:titleTextAppearance="@style/ToolbarTitleStyle"
      app:subtitleTextAppearance="@style/ToolbarSubtitleStyle">

    <!-- Conteneur principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="8dp">

      <!-- Header avec titre et sous-titre -->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginStart="16dp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="FOOD RESCUE COMMUNITY"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="FoodRescue" />

        <TextView
            android:id="@+id/headerSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sous-titre ou Description"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="Welcome" />
      </LinearLayout>

      <!-- IcÃ´ne de notification -->
      <ImageView
          android:id="@+id/notificationIcon"
          android:layout_width="28dp"
          android:layout_height="28dp"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:layout_marginEnd="16dp"
          android:src="@drawable/notification_bell_drawable"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:padding="2dp"
          app:tint="@color/white"/>

      <!-- Badge de notification -->
      <TextView
          android:id="@+id/notificationBadge"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_alignTop="@id/notificationIcon"
          android:layout_alignEnd="@id/notificationIcon"
          android:layout_marginTop="-8dp"
          android:layout_marginEnd="-8dp"
          android:background="@drawable/notification_badge_background"
          android:elevation="6dp"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold"
          android:padding="2dp"
          android:shadowColor="@color/black"
          android:shadowDx="1"
          android:shadowDy="1"
          android:shadowRadius="2"
          android:visibility="gone"
          tools:visibility="visible"
          tools:text="3" />
    </RelativeLayout>
  </androidx.appcompat.widget.Toolbar>

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.fragment.app.FragmentContainerView
      android:id="@+id/fragmentContainerView2"
      android:name="androidx.navigation.fragment.NavHostFragment"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:defaultNavHost="true"
      app:navGraph="@navigation/nav_graph"
      android:background="@drawable/content_background"
      android:elevation="2dp"
      app:layout_constraintTop_toBottomOf="@id/appBarLayout"
      app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNavigationView"
      android:layout_width="0dp"
      android:layout_height="64dp"
      android:layout_margin="16dp"
      android:background="@drawable/bottom_nav_background"
      android:elevation="12dp"
      app:elevation="8dp"
      app:itemIconSize="26dp"
      app:itemIconTint="@color/bottom_nav_colors"
      app:itemTextColor="@color/bottom_nav_colors"
      app:itemRippleColor="@color/ripple_color"
      app:labelVisibilityMode="labeled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>