<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.infoDonation_">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:scaleType="centerCrop"
        android:elevation="0dp"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- ScrollView contenant tout le contenu -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/donaretitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:letterSpacing="0.02"
                    android:textColor="#1A237E"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:text="Nom du donateur" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="#F5F5F5"
                    android:elevation="2dp"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/qualiter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Qualité" />

                    <TextView
                        android:id="@+id/quantiter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Quantité" />
                </LinearLayout>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:drawablePadding="8dp"
                    android:letterSpacing="0.03"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    tools:text="Date de donation" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    tools:text="Description de la donation..." />

                <FrameLayout
                    android:id="@+id/containerFragment"
                    android:layout_width="351dp"
                    android:layout_height="156dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/container_fragment_background"
                    android:elevation="4dp"
                    android:padding="16dp" />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/getHelpbtn"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#308DFF"
                    android:elevation="4dp"
                    android:text="I need it"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</FrameLayout>
