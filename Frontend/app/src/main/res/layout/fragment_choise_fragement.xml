<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- First CardView with a custom gradient background -->
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:id="@+id/cardView1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/card_action"
            android:elevation="4dp"
            android:clipToOutline="true">

            <TextView
                android:id="@+id/infoText1"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="138dp"
                android:layout_marginTop="7dp"
                android:lineSpacingExtra="4dp"
                android:text="Make a donation to an association capable of helping."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/rightImage1"
                android:layout_width="127dp"
                android:layout_height="108dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="243dp"
                android:scaleType="centerInside"
                android:src="@drawable/imge2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:id="@+id/cardView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_action"
            android:clipToOutline="true"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/infoText2"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="156dp"
                android:layout_marginTop="36dp"
                android:lineSpacingExtra="4dp"
                android:text="Share your surplus to fight hunger. Your actions inspire change."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/rightImage2"
                android:layout_width="124dp"
                android:layout_height="99dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="253dp"
                android:scaleType="centerInside"
                android:src="@drawable/donnate2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
