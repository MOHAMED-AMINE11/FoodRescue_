<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dégradé du jaune à l'orange -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#CBC274"
                android:endColor="#FF3D00"
                android:type="linear" />

            <!-- Ajout des coins arrondis -->
            <corners android:radius="27dp" /> <!-- Remplace 16dp par la valeur souhaitée -->
        </shape>
    </item>
</layer-list>
