<resources>

    <!-- General Text Styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.Subtitle1.Bold" parent="TextAppearance.App.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Body.Bold" parent="TextAppearance.App.Body">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.App.Button.Primary.Large" parent="Widget.App.Button.Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.Enhanced" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- RadioButton Styles -->
    <style name="Widget.App.RadioButton.Enhanced" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- CardView Styles -->
    <style name="Widget.App.CardView.Outlined.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <style name="Widget.App.CardView.Outlined" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.App.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>



    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary_dark</item>
        <item name="helperTextTextColor">@color/secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style global pour TextInputEditText -->
    <style name="CustomTextInputEditText" parent="TextAppearance.AppCompat.Body1">
        <!-- Couleur du texte -->
        <item name="android:textColor">@color/text_primary</item>

        <!-- Couleur de l'indicateur de texte (hint) -->
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Espace intérieur pour une saisie plus confortable -->
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item> <!-- Pour ajouter de l'espace à gauche -->
        <item name="android:paddingEnd">16dp</item> <!-- Pour ajouter de l'espace à droite -->

        <!-- Taille du texte -->
        <item name="android:textSize">16sp</item>

        <!-- L'alignement du texte pour une meilleure lisibilité -->
        <item name="android:gravity">start|center_vertical</item>

        <!-- Fond avec gestion du focus -->
        <item name="android:background">@drawable/text_input_background</item>
    </style>



    <!-- Style pour AutoCompleteTextView -->
    <style name="CustomAutoCompleteTextView" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#FFA500</item> <!-- Couleur orange -->
        <item name="boxStrokeWidthFocused">2dp</item> <!-- Épaisseur -->
    </style>

    <!-- Style pour le RadioGroup -->
    <style name="CustomRadioGroup" >
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!-- Style pour le TextView de titre -->
    <style name="CustomTextViewTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Style pour les RadioButtons -->
    <style name="CustomRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:buttonTint">@color/radio_button_tint</item>
    </style>

    <style name="CircularImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Thème principal de l'application -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_light</item>
        <item name="colorAccent">@color/orange_primary</item>

        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/orange_primary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Style des composants Material -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Style pour le Dropdown -->
    <style name="DropDownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/green_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconTint">@color/green_primary</item>
        <item name="hintTextColor">@color/green_primary</item>
    </style>

    <!-- Style pour le DatePicker -->
    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="materialCalendarHeaderTitle">@style/CalendarHeaderTitle</item>
        <item name="materialCalendarHeaderToggleButton">@style/CalendarHeaderToggle</item>
        <item name="materialCalendarHeaderConfirmButton">@style/CalendarButton</item>
        <item name="materialCalendarHeaderDivider">@style/CalendarDivider</item>
    </style>

    <!-- Style pour les titres du calendrier -->
    <style name="CalendarHeaderTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style pour les boutons du calendrier -->
    <style name="CalendarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green_primary</item>
        <item name="rippleColor">@color/green_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style pour le bouton toggle du calendrier -->
    <style name="CalendarHeaderToggle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:tint">@color/green_primary</item>
    </style>

    <!-- Style pour le séparateur du calendrier -->
    <style name="CalendarDivider">
        <item name="android:background">@color/divider</item>
    </style>

    <!-- Style pour les TextInputLayout -->
    <style name="CustomTextInputLayout1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/green_primary</item>
        <item name="startIconTint">@color/green_primary</item>
    </style>

    <!-- Style pour les MaterialButton -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">28dp</item>
        <item name="backgroundTint">@color/green_primary</item>
    </style>

    <!-- Style pour les MaterialCardView -->
    <style name="CustomMaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
    </style>

    <style name="DonationCard">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Profile Image Style -->
    <style name="ProfileImage">
        <item name="android:layout_width">@dimen/profile_image_size</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/CircularImage</item>
    </style>

    <!-- Circular Image Shape -->
    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Styles -->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextDate">
        <item name="android:textSize">@dimen/text_size_date</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Confirm">
        <item name="backgroundTint">@color/button_confirm</item>
    </style>

    <style name="Button.Cancel">
        <item name="backgroundTint">@color/button_cancel</item>
    </style>
    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarSubtitleStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
    </style>
</resources>
